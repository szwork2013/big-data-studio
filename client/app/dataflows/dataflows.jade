div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-lg-12
      h1.page-header Dataflows:
      div(ng-repeat='dataflow in dataflows')
        h4
          a(href="/dataflow/{{dataflow._id}}") {{dataflow.name}}
        p {{dataflow.description}}
      form.form(name='form', ng-submit='createDataflow(form)', novalidate='')
        .form-group(ng-class='{ \'has-success\': form.name.$valid && submitted, \'has-error\': form.name.$invalid && submitted }')
          input.form-control(type='text', name='name', ng-model='newDataflow.name', required='')
          p.help-block(ng-show='form.name.$error.required && submitted')
            | A name is required
        button.btn.btn-lg.btn-primary(type='submit') Add
